<h2>The Warehouse</h2>

<table id="items">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr id="item_<%= item.id %>">
        <td><%= link_to item.name, warehouse_item_path(item.id) %></td>
        <td><%= item.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>