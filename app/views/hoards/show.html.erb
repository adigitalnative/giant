<h2>Your Inventory <small><%= link_to "Add item", new_user_item_path(current_user.id) %></h2>

<table id="items">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr id="item_<%= item.id %>">
        <td>
          <%= item.name %>
          <% if item.archived? %> <span class="label round alert">Archived</span><% end %>
        </td>
        <td><%= item.description %></td>
        <td><%= link_to "Edit", edit_user_item_path(item.user_id, item.id) %> <%= link_to "Delete", user_item_path(item.user_id, item.id), method: "delete", confirm: "Are you sure you want to delete this item?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>