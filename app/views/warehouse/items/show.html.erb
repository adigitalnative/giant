<div id="item">
  <h2><%= @item.name %></h2>
  <% if @item.belongs_to?(current_user) %>
    <%= link_to "Edit", edit_user_item_path(@item.user_id, @item.id) %>
  <% else %>
    <%= link_to "Reserve Item", new_item_reservation_path(@item.id) %>
  <% end %>

  <div id="reservations">

    <% if @item.user == current_user %>
      <% @item.reservations.each do |reservation| %>
        <p id="reservation_<%= reservation.id %>">
          Starts: <%= reservation.start_date %>, Ends: <%= reservation.end_date %>, Status: <%= reservation.status.name %>
          <% if reservation.status.name == "Pending" %>
            <%= link_to "Manage", edit_item_reservation_path(@item.id, reservation.id), class: "button tiny" %>
          <% end %>
          </p>
      <% end %>
    <% else %>
      <% @item.reservations.find_all_by_user_id(current_user.id).each do |reservation| %>
        <p id="reservation_<%= reservation.id %>">Starts: <%= reservation.start_date %>, Ends: <%= reservation.end_date %>, Status: <%= reservation.status.name %></p>
      <% end %>
    <% end %>
  </div>
</div>